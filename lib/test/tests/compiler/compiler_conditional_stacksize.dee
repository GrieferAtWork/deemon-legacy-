// v101:1 (and probably v100) had a problem that caused an invalid
// stacksize of +1 to exists in the fail-branch of an if-expression.
// >> This test make sure that is fixed


assert ({
	__stack volatile local a = 20;
	__stack volatile local b = 10;
	// Due to the stacksize offset, loading 'b'
	// in the fail-branch used to reload the value from 'a'.
	a < b ? a : b;
}) == 10;






